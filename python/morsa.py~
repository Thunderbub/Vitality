#!/usr/bin/python

import os

import pygtk
pygtk.require('2.0')
import gtk
import glib



    def keypress(self,widget,event):
        cevent = event.keyval
        print cevent
        if cevent == 113: 
        	print "Got pressed Q"
        if cevent == 65307: 
        	print "Got pressed ESC"
        	print "Quit!"
        	exit()
        if cevent == 65363: 
        	print "Got pressed Right"
        	self.on_tick()
        	self.display()
        if cevent == 65361: 
        	print "Got pressed Left"
        	self.on_tick_left()
        	self.display()
        	

  

